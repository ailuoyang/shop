<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="holder"
            type="com.ledao.shop.one.index.IndexFragment.Holder" />
        <variable
            name="model"
            type="com.ledao.shop.one.index.IndexFragment.Model" />

    </data>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/index_flush"
        android:background="@color/zqs_common_view_default_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        app:srlEnableLoadMore="true"
        app:srlEnableRefresh="true"
        >
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <com.google.android.material.appbar.AppBarLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:background="@color/zqs_common_view_default_bg"
                tools:context="com.ledao.shop.one.index.IndexFragment"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        >
                        <LinearLayout
                            android:id="@+id/index_search"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            app:bl_corners_radius="15dp"
                            app:bl_solid_color="#EEEEEE"
                            tools:background="#EEEEEE"
                            android:layout_weight="1"
                            android:layout_marginRight="15dp"
                            android:onClick="@{v->holder.clickSearch()}"
                            >

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/bg_test_color"
                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:layout_marginLeft="11dp"
                                android:paddingRight="15dp"
                                android:paddingTop="0dp"
                                android:paddingBottom="0dp"
                                android:focusable="false"
                                android:textSize="12dp"
                                android:layout_gravity="center_vertical"
                                app:bl_stroke_width="0dp"
                                android:hint="搜索商品名称或者类型"
                                />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/index_message"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/bg_test_color"
                            android:onClick="@{v->holder.clickMessage()}"
                            />

                    </LinearLayout>

                    <com.zhpan.bannerview.BannerViewPager
                        android:id="@+id/index_bannerVp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_height="125dp"
                        tools:background="@drawable/bg_test_color"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            >
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/bg_test_color"
                                android:layout_marginRight="10dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="官方授权"
                                android:textSize="12dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            >
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/bg_test_color"
                                android:layout_marginRight="10dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="假一赔十"
                                android:textSize="12dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            >
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/bg_test_color"
                                android:layout_marginRight="10dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="售后无忧"
                                android:textSize="12dp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:alignContent="space_around"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="25dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_flexGrow="1"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="32.5dp"
                                android:layout_height="32.5dp"
                                android:src="@drawable/bg_test_color"
                                android:onClick='@{v->holder.click1()}'
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="免费领"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_flexGrow="1"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="32.5dp"
                                android:layout_height="32.5dp"
                                android:src="@drawable/bg_test_color"
                                android:onClick='@{v->holder.click2()}'
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="领券"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_flexGrow="1"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="32.5dp"
                                android:layout_height="32.5dp"
                                android:src="@drawable/bg_test_color"
                                android:onClick='@{v->holder.click3()}'
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="团购"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_flexGrow="1"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="32.5dp"
                                android:layout_height="32.5dp"
                                android:src="@drawable/bg_test_color"
                                android:onClick='@{v->holder.click4()}'
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="精选"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_flexGrow="1"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="32.5dp"
                                android:layout_height="32.5dp"
                                android:src="@drawable/bg_test_color"
                                android:onClick='@{v->holder.click5()}'
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="爆款"
                                />
                        </LinearLayout>
                    </com.google.android.flexbox.FlexboxLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热门活动"
                        android:textColor="#ff000000"
                        android:textSize="13dp"
                        android:paddingLeft="15dp"
                        android:layout_marginBottom="10dp"
                        />

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        app:justifyContent="space_between"
                        >

                        <ImageView
                            android:layout_width="157dp"
                            android:layout_height="72dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/bg_test_color"
                            bindImageUrl="@{model.imageUrl1}"
                            app:bl_corners_radius="5dp"
                            app:bl_solid_color="#fff"
                            />

                        <ImageView
                            android:layout_width="157dp"
                            android:layout_height="72dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/bg_test_color"
                            bindImageUrl="@{model.imageUrl2}"
                            app:bl_corners_radius="5dp"
                            app:bl_solid_color="#fff"
                            />

                    </com.google.android.flexbox.FlexboxLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="为你推荐"
                        android:textColor="#ff000000"
                        android:textSize="13dp"
                        android:paddingLeft="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="25dp"
                        />

                </LinearLayout>


            </com.google.android.material.appbar.AppBarLayout>
            <FrameLayout
                android:id="@+id/index_shop_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/zqs_common_view_default_bg"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>



</layout>